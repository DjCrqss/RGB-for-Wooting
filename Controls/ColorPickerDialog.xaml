<Window x:Class="WootingRGB.Controls.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="460" Width="380"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent">
    
    <Window.Resources>
        <!-- Hue Slider Style -->
        <Style x:Key="HueSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="20" Height="20" Background="White" 
                                           BorderBrush="#888888" BorderThickness="2">
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Fill="White" Stroke="#888888" StrokeThickness="3"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#2B2B2B" CornerRadius="8" BorderBrush="#404040" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="280"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 2D Color Canvas -->
            <Border Grid.Row="0" BorderBrush="#404040" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15">
                <Grid x:Name="ColorCanvas" 
                      Background="Transparent"
                      MouseLeftButtonDown="ColorCanvas_MouseDown" 
                      MouseMove="ColorCanvas_MouseMove"
                      MouseLeftButtonUp="ColorCanvas_MouseUp">
                    <Rectangle x:Name="HueGradient" IsHitTestVisible="False">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop x:Name="HueColor" Color="Red" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle IsHitTestVisible="False">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="Black" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <!-- Picker Circle -->
                    <Ellipse x:Name="PickerCircle" Width="16" Height="16" 
                             Stroke="White" StrokeThickness="2" 
                             IsHitTestVisible="False"
                             HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <!-- Hue Slider -->
            <Grid Grid.Row="1" Height="30" Margin="0,0,0,15">
                <Border CornerRadius="15" Height="12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="#FF0000" Offset="0.00"/>
                            <GradientStop Color="#FFFF00" Offset="0.17"/>
                            <GradientStop Color="#00FF00" Offset="0.33"/>
                            <GradientStop Color="#00FFFF" Offset="0.50"/>
                            <GradientStop Color="#0000FF" Offset="0.67"/>
                            <GradientStop Color="#FF00FF" Offset="0.83"/>
                            <GradientStop Color="#FF0000" Offset="1.00"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Slider x:Name="HueSlider" Minimum="0" Maximum="360" 
                        VerticalAlignment="Center" 
                        ValueChanged="HueSlider_ValueChanged"
                        Style="{StaticResource HueSliderStyle}"/>
            </Grid>

            <!-- Hex Input -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="HEX" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
                <Border Grid.Column="1" Background="#404040" CornerRadius="4" Padding="10,8">
                    <TextBox x:Name="HexTextBox" Background="Transparent" Foreground="White" 
                             BorderThickness="0" FontFamily="Consolas" FontSize="14"
                             TextChanged="HexTextBox_TextChanged"/>
                </Border>
            </Grid>

            <!-- Recently Used -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="RECENTLY USED" Foreground="#AAAAAA" FontSize="11" Margin="0,0,0,10"/>
                <UniformGrid x:Name="RecentColorsGrid" Rows="2" Columns="6">
                    <!-- Recent colors will be added here programmatically -->
                </UniformGrid>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="80" Height="32" 
                        Click="OkButton_Click" Margin="0,0,10,0"
                        Style="{StaticResource ModernButtonStyle}"/>
                <Button Content="Cancel" Width="80" Height="32" 
                        Click="CancelButton_Click"
                        Style="{StaticResource ModernButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
