<Window x:Class="WootingRGB.Controls.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Color" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Color Preview -->
        <Border Grid.Row="0" Height="80" BorderBrush="Black" BorderThickness="2" Margin="0,0,0,15">
            <Rectangle x:Name="ColorPreview" Fill="White"/>
        </Border>

        <!-- Color Sliders -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <!-- Red Slider -->
            <StackPanel Margin="0,0,0,10">
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Red:" Width="50" VerticalAlignment="Center"/>
                    <TextBlock x:Name="RedValueText" Text="0" Width="40" TextAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                </DockPanel>
                <Slider x:Name="RedSlider" Minimum="0" Maximum="255" TickFrequency="1" 
                        IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            </StackPanel>

            <!-- Green Slider -->
            <StackPanel Margin="0,0,0,10">
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Green:" Width="50" VerticalAlignment="Center"/>
                    <TextBlock x:Name="GreenValueText" Text="0" Width="40" TextAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                </DockPanel>
                <Slider x:Name="GreenSlider" Minimum="0" Maximum="255" TickFrequency="1" 
                        IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            </StackPanel>

            <!-- Blue Slider -->
            <StackPanel>
                <DockPanel Margin="0,0,0,5">
                    <TextBlock Text="Blue:" Width="50" VerticalAlignment="Center"/>
                    <TextBlock x:Name="BlueValueText" Text="0" Width="40" TextAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                </DockPanel>
                <Slider x:Name="BlueSlider" Minimum="0" Maximum="255" TickFrequency="1" 
                        IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" Width="80" Height="30" 
                    IsDefault="True" Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30" 
                    IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
