<Window x:Class="WootingRGB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WootingRGB"
        mc:Ignorable="d"
        Title="Wooting RGB Controller" Height="600" Width="900"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Connection Status -->
        <GroupBox Header="Keyboard Connection" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button x:Name="ConnectButton" Content="Connect" Width="100" Height="30" Click="ConnectButton_Click" Margin="0,0,10,0"/>
                <TextBlock x:Name="StatusText" Text="Not Connected" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
                <TextBlock x:Name="DeviceCountText" Text="" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Effect Selection -->
        <GroupBox Header="RGB Effects" Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <WrapPanel x:Name="EffectButtonsPanel" Margin="0,0,0,10">
                    <!-- Effect buttons will be dynamically added here -->
                </WrapPanel>
                <TextBlock x:Name="EffectDescriptionText" Text="Select an effect to begin" 
                           FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Effect Parameters -->
        <GroupBox Header="Effect Settings" Grid.Row="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ParametersPanel" Margin="5">
                    <TextBlock Text="No effect selected" FontStyle="Italic" Foreground="Gray" 
                               x:Name="NoParametersText"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
