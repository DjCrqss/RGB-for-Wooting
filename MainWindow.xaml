<Window x:Class="WootingRGB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WootingRGB"
        mc:Ignorable="d"
        Title="Wooting RGB Controller" Height="600" Width="750"
        Background="#1E1E1E"
        Closing="Window_Closing">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Effect Button Style -->
        <Style x:Key="EffectButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Width" Value="145"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Slider Button Style (for invisible repeat buttons) - MUST BE BEFORE EffectSlider -->
        <Style x:Key="SliderButtonStyle" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom Slider Style -->
        <Style x:Key="EffectSlider" TargetType="Slider">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="TrackBackground" 
                                    Grid.Row="1"
                                    Height="4" 
                                    Background="#555555"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderButtonStyle}" Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" Background="#FFD45C" CornerRadius="2,0,0,2"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderButtonStyle}" Command="Slider.IncreaseLarge"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Ellipse Width="16" Height="16" Fill="#FFD45C" Stroke="#1E1E1E" StrokeThickness="2"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Left Panel Top Section - My Device -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,20,0">
            <TextBlock Text="MY DEVICE" Style="{StaticResource SectionTitle}"/>
            <Border Background="#252526" CornerRadius="6" Padding="15" Margin="0,0,0,25">
                <StackPanel>
                    <Button x:Name="ConnectButton" 
                            Content="Connect" 
                            Style="{StaticResource ModernButton}"
                            Click="ConnectButton_Click"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,10"/>
                    <TextBlock x:Name="StatusText" 
                               Text="Not connected" 
                               Foreground="#999999"
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="DeviceCountText" 
                               Text="" 
                               Foreground="#666666"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Left Panel Bottom Section - Effect Selection -->
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,20,0">
            <TextBlock Text="EFFECT SELECTION" Style="{StaticResource SectionTitle}"/>
            <Border Background="#252526" CornerRadius="6" Padding="15">
                <UniformGrid x:Name="EffectButtonsPanel" Columns="2">
                    <!-- Effect buttons will be dynamically added here -->
                </UniformGrid>
            </Border>
        </StackPanel>

        <!-- Right Panel - Effect Parameters (spans both rows) -->
        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <TextBlock Text="EFFECT PARAMETERS" Style="{StaticResource SectionTitle}"/>
            <Border x:Name="ParametersCard" Background="#252526" CornerRadius="6" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ParametersPanel">
                        <TextBlock Text="No effect selected" 
                                   FontStyle="Italic" 
                                   Foreground="#666666"
                                   FontSize="13"
                                   x:Name="NoParametersText"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </Grid>
</Window>
